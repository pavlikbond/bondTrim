<section id="contact" class="section-padding bg-background-600">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Get Your <span class="text-primary-600">Free Quote</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Ready to transform your home? Contact us for a free consultation and quote. 
        We serve the entire Twin Cities Metro area.
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <!-- Contact Information -->
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Business Info -->
        <div class="bg-gradient-to-br from-background-100 to-background-200 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <a href="tel:9529235133" class="block">
              <div class="flex items-start space-x-4 p-3 rounded-lg hover:bg-background-300 transition-colors cursor-pointer">
                <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="fas fa-phone text-primary-600"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Phone</h4>
                  <p class="text-lg text-primary-600 hover:text-primary-700 transition-colors">
                    (952) 923-5133
                  </p>
                  <p class="text-sm text-gray-600">Call us anytime</p>
                </div>
              </div>
            </a>

            <a href="mailto:bondtrimllc@gmail.com" class="block">
              <div class="flex items-start space-x-4 p-3 rounded-lg hover:bg-background-300 transition-colors cursor-pointer">
                <div class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="fas fa-envelope text-secondary-600"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Email</h4>
                  <p class="text-lg text-secondary-600 hover:text-secondary-700 transition-colors">
                    bondtrimllc@gmail.com
                  </p>
                  <p class="text-sm text-gray-600">We'll respond within 24 hours</p>
                </div>
              </div>
            </a>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-map-marker-alt text-primary-600"></i>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Location</h4>
                <p class="text-lg text-gray-900">Savage, Minnesota</p>
                <p class="text-sm text-gray-600">Serving Twin Cities Metro</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Why Choose Us -->
        <div class="bg-gradient-to-br from-background-200 to-background-100 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Why Choose Bond Trim LLC?</h3>
          
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <i class="fas fa-check-circle text-primary-600"></i>
              <span class="text-gray-700">Licensed & Insured</span>
            </div>
            <div class="flex items-center space-x-3">
              <i class="fas fa-check-circle text-primary-600"></i>
              <span class="text-gray-700">Professional Craftsmanship</span>
            </div>
            <div class="flex items-center space-x-3">
