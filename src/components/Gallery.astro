---
import { Image } from 'astro:assets';
import image1 from '../assets/image1.webp';
import image2 from '../assets/image2.webp';
import image3 from '../assets/image3.webp';
import image4 from '../assets/image4.jpg';
import image5 from '../assets/image5.jpg';
import image6 from '../assets/image6.webp';
import image7 from '../assets/image7.jpg';
import image8 from '../assets/image8.webp';
---

<section id="gallery" class="section-padding bg-background-100">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our <span class="text-primary-600">Work</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Browse our portfolio of completed projects showcasing our craftsmanship and attention to detail
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image1}
          alt="Gallery image 1 - Professional finish carpentry work"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image2}
          alt="Gallery image 2 - Custom trim work"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image3}
          alt="Gallery image 3 - Stair railing installation"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image4}
          alt="Gallery image 4 - Cabinet installation"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image5}
          alt="Gallery image 5 - Door installation"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image6}
          alt="Gallery image 6 - Wainscoting work"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image7}
          alt="Gallery image 7 - Crown molding detail"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <Image
          src={image8}
          alt="Gallery image 8 - Custom railing design"
          class="w-full h-auto md:h-64 object-cover cursor-pointer hover:scale-105 transition-transform duration-300"
        />
      </div>
    </div>
  </div>
</section>
